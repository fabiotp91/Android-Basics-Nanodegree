<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
<!-- Music list text style, Music text-->
  <style name="MusicText">
    <item name="android:textColor">@color/mainTextColor</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_marginLeft">8dp</item>
  </style>
  <!-- Secondary Music list text style, Band text-->
  <style name="MusicText.Secondary">
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>
  <!-- Play Activity text style, Music text-->
  <style name="Playing">
    <item name="android:textColor">@color/mainTextColor</item>
    <item name="android:textSize">34sp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginTop">32dp</item>
  </style>
  <!-- Play Activity text style, Band text-->
  <style name="Playing.Secondary">
    <item name="android:textColor">@color/secondaryTextColor</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginLeft">16dp</item>
  </style>

</resources>
