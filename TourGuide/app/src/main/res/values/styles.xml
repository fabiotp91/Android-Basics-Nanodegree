<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarStyle">@style/GuideAppBarStyle</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <!-- App bar style -->
  <style name="GuideAppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="elevation">0dp</item>
  </style>

  <!-- Style for active tab -->
  <style name="GuideTab" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@android:color/white</item>
    <item name="tabSelectedTextColor">@android:color/white</item>
    <item name="tabTextAppearance">@style/GuideTabTextAppearance</item>
  </style>

  <!-- Text appearance style for tab -->
  <style name="GuideTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textColor">#A8A19E</item>
  </style>

  <!-- Text appearance for intro text -->
  <style name="IntroText">
    <item name="android:textSize">16sp</item>
    <item name="android:padding">16dp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <!-- Text appearance for list items -->
  <style name="ListItem">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingBottom">@dimen/padding_width</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:gravity">bottom</item>
  </style>

  <style name="ListItem.Secondary">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:gravity">top</item>
  </style>

</resources>
